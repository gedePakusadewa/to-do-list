	<body>
		<div class = "mainContainer">
			<div>
			<h1 class = "title">To Do List</h1>
			<div class = "formInput">
				<input type = "text" class = "inputContainer" id = "input-1" name = "item" value = "Name" /><button onclick = "addItem()" >add item</button>
			</div>
			</div>
			<div id = "modal-result">
				
			</div>
		</div>

	</body>
	<script>
		/*
		var dataTodo = { 
			do0:{
				data:"Do this now", isDone : false, code : "do0" 
			},

			do1:{
				data:"DO that tommorow", isDone : false, code : "do1"
			},

			do2:{
				data:"Not do that", isDone : false, code : "do2"
			}

		};
		*/
		var dataTodo = new Array();
		var incre = 0;
		
		function addItem(){
			var dataForm = document.getElementById('input-1').value;
			dataTodo["do" + incre] = {data:dataForm, isDone:false, code : "do" + incre};
			incre++;
			console.log(dataTodo);
			displayData();
		}
		
		function displayData(){
			var tes = "";
			
			for(x in dataTodo){
				tes = tes + ("<div>" + (dataTodo[x]["data"]) 
					+ "<button onclick = 'deleteData(this.name)' name = " 
					+ dataTodo[x]["code"] + " >Del</button><button>Y</button></div>");

			}
			document.getElementById('modal-result').innerHTML = tes;
						
		}
		
		function deleteData(idData){
			console.log((idData));
			delete dataTodo[idData];
			displayData();
		}
		//i think this is alreadey done, but if you want, u can put update function so it can update json file to for edit data purposes and change isDone status
		displayData();
	</script>
